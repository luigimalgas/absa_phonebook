@model Phonebook.Models.PhonebookEntry

@{
    ViewData["Title"] = "Delete"; 
    PhoneBook phoneBook = ViewBag.PhoneBook;

}


<div class="modal fade" tabindex="-1" role="dialog" id="deleteEntryModal">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title">Delete</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <h3>Are you sure you want to delete 
                    <span id="pbEntryName"></span>?</h3>
                <div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" id="pbEntryID"/>
                        <div class="form-group modal-footer">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-controller="PhoneBook" asp-action="Details" class="btn btn-primary" asp-route-id="@phoneBook.ID">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>